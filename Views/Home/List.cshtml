@model ICollection<eLibrary.Models.Book>
@{
ViewData["Title"] = "List";
}

<head>
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="htps://cdn.datatables.net/1.10.19/css/dataTables.bootstrap4.min.css" />
</head>
<div class="container-fluid mb-3 mt-3">
    <h2>Lista dodanych książek:</h2>
    <table class="table table-striped table-bordered" style="width:100%">
        <thead>
            <tr>
                <th></th>
                <th>Tytuł</th>
                <th>Autor</th>
                <th>Rok publikacji</th>
                <th>Number ISBN</th>
                <th>Ilość stron</th>
                <th></th>


            </tr>
        </thead>
        <tbody>

            @foreach (var book in @Model)
            {
            <tr>
                <td>
                    <div class="center">
                        <img src="~/images/open-book.png" alt="book" class="logo_book" />
                    </div>
                </td>
                <td>
                    @book.Title
                </td>
                <td>
                    @book.Authors
                </td>
                <td>

                    @Html.DisplayFor(modelItem => book.PublishingYear)
                </td>
                <td>
                    @book.ISBN
                </td>
                <td>
                    @book.Pages
                </td>
               
                <td class="center">
                    <a class="btn btn-primary" asp-controller="Book" asp-action="Borrowed"><i class="material-icons">article</i>Wypożycz</a>
              
                </td>
               
            </tr>
}
        </tbody>

    </table>
</div>

