@model Login
@{
ViewData["Title"] = "Login";
}

<html>
<head>
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <link rel="stylesheet" href="path/to/font-awesome/css/font-awesome.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.13.0/css/all.min.css" />
</head>
<body>
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-6 mx-auto">
                <div class="card">
                    <div class="card-body">
                        <div class="row center">
                            <div class="user_col">
                                <img src="../images/user_log.png" alt="user" class="logo_user">
                            </div>
                        </div>
                        <div class="row">
                            <div class="col">
                                <center>
                                    <h3>Logowanie</h3>
                                </center>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col">
                                <hr>
                            </div>
                        </div>
                        <form method="post">
                            
                            <div class="row">
                                <div class="col">
                                    <div class=" mb-4 form-group">

                                        <span asp-validation-for="Email" class="text-danger"></span>

                                        <label asp-for="Email">Email:</label>
                                        <input class="form-control" asp-for="Email" />
                                    </div>
                                    <div class="mb-4 form-group">

                                        <span asp-validation-for="Password" class="text-danger"></span>

                                        <label asp-for="Password">Hasło:</label>
                                        <input class="form-control" asp-for="Password" type="password" />

                                    </div>
                                    @Html.ValidationMessage("CustomError")
                                    
                                <div class="form-group">
                                    <div class="checkbox" id="check">
                                        <label asp-for="RememberMe" class="remember">
                                            <input asp-for="RememberMe" />
                                            Zapamiętaj mnie
                                        </label>
                                    </div>
                                    <div class="form-group signup_button">
                                        <input class="btn btn-info btb-block btn-lg" type="submit" value="Zaloguj się" />
                                    </div>
                                </div>
                                    </div>
                                </div>
                         

                        </form>
                       
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>

