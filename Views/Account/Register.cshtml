@model Register
@{
ViewData["Title"] = "Register";
}

<html>
    <head>
      <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
  <div class="container-fluid">
      <div class="row">
         <div class="col-md-6 mx-auto">
            <div class="card">
               <div class="card-body">
                  <div class="row center">
                     <div class="user_col">
                           <img src="../images/user_sign.png" alt="user" class="logo_user">
                     </div>
                  </div>
                  <div class="row">
                     <div class="col">
                        <center>
                           <h3>Rejestracja</h3>
                        </center>
                     </div>
                  </div>
                  <div class="row">
                     <div class="col">
                        <hr>
                     </div>
                  </div>
                     <form asp-controller="Account" asp-action="Register" method="post">
                            
                  <div class="row">    
        <div class="col-md-6 form-group">
            <span asp-validation-for="FirstName" class="text-danger"></span>
            <label asp-for="FirstName">Imie:</label>
            <input class="form-control" asp-for="FirstName" />
        </div>
       
        <div class="col-md-6 form-group">
             <span asp-validation-for="LastName" class="text-danger"></span>
            <label asp-for="LastName">Nazwisko:</label>
            <input class="form-control" asp-for="LastName" />
        </div>
       </div>
                <div class="row">
                     <div class="col">
                     <center>
                           <span class="badge badge-pill badge-info">Dane logowania:</span>
                        </center>
                     </div>
                  </div>
         <div class="row">    
        <div class="col form-group">
            <span asp-validation-for="Email" class="text-danger"></span>
            <label asp-for="Email">Email:</label>
            <input class="form-control" asp-for="Email" type="email" />
        </div>
        </div>
        <div class="row">    
        <div class="col-md-6 form-group">
          <span asp-validation-for="Password" class="text-danger"></span>
            <label asp-for="Password">Hasło:</label>
            <input class="form-control" asp-for="Password" type="password"/>
        </div>
       
        <div class="col-md-6 form-group">
         <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            <label asp-for="ConfirmPassword">Powtórz hasło:</label>
            <input class="form-control" asp-for="ConfirmPassword" type="password" />
        </div>
        </div>
      
       
         <div class="row signup_button">    
         
            <input class="btn btn-info btb-block btn-lg" type="submit" value="Zarejestruj się" />
       
        </div>
     
       
                        </form>
                     </div>
                  </div>
               </div>
            </div>
               </div>
       </body>
       </html>
 